#!/bin/bash

set -e

. $HOME/.zshrc_utils

if [[ $(git --no-pager show --pretty=format:"%s" -s) =~ ^--wip-- ]]; then
  echo -e "$(yellow "[WARN] WIP commit detected. UNWIP by running") $(green $ gunwip)"
  echo -en "\nCommit: "
  git --no-pager log HEAD --stat -n 1 --pretty=format:"%B"
  echo
  exit 1
fi

