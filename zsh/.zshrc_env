# Editor (https://github.com/macvim-dev/macvim)
export EDITOR=$(which mvim)

# Manpage (https://github.com/sharkdp/bat)
export MANPAGER="sh -c 'col -bx | bat -l man -p'"

# Language
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# Custom Path
export PATH=~/.commands:$PATH

# NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"                   # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion" # This loads nvm bash_completion

# rbenv
[[ -d $HOME/.rbenv ]] && export PATH=${HOME}/.rbenv/bin:${PATH} && eval "$(rbenv init -)"

ZSH_SITE_FUNCTIONS="$(brew --prefix)/share/zsh/site-functions"

# Brew
if type brew &>/dev/null; then
  FPATH="$ZSH_SITE_FUNCTIONS:${FPATH}"

  autoload -Uz compinit
  compinit
fi

# Github
[[ -f "$ZSH_SITE_FUNCTIONS/_gh" ]] && gh completion -s zsh > $ZSH_SITE_FUNCTIONS/_gh

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/opt/homebrew/Caskroom/miniconda/base/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/opt/homebrew/Caskroom/miniconda/base/etc/profile.d/conda.sh" ]; then
        . "/opt/homebrew/Caskroom/miniconda/base/etc/profile.d/conda.sh"
    else
        export PATH="/opt/homebrew/Caskroom/miniconda/base/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<
